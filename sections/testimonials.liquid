{%- liquid
  assign sid = section.id
  assign col = section.settings.col_pr
  assign col_tb = section.settings.col_pr_tb
  assign layout_des = section.settings.layout_des
  assign ter_des = section.settings.ter_des -%}

<div class="nt_se_{{sid}} {{section.settings.layout}}">
  {%- render 'section_title',section_title:'mb__40' -%}
  <div class="equal_nt position_8 row{% if ter_des == '4' %} no-gutters{% endif %} quotes_wrapper quotes_des_{{ter_des}}{% if layout_des == '2' %} js_carousel nt_slider prev_next_{{section.settings.btn_color}} btn_owl_{{section.settings.btn_owl}} dot_owl_{{section.settings.dot_owl}} dot_color_{{section.settings.dot_color}} btn_vi_{{section.settings.btn_vi}}{% endif %}"{% if layout_des == '2' %} data-flickity='{"imagesLoaded": 0,"adaptiveHeight": 1, "contain": 1, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": {{section.settings.loop}},"prevNextButtons": {{section.settings.button}},"percentPosition": 1,"pageDots": {{section.settings.dot}}, "autoPlay" : {{ section.settings.au_time | times: 1000 }}, "pauseAutoPlayOnHover" : {{section.settings.au_hover}}, "rightToLeft": {{settings.use_rtl}} }'{% endif %}>
    {%- if section.blocks.size > 0 -%}
      {%- if ter_des == '3' -%}
        {%- for block in section.blocks -%}<div class="quote_col col-12 col-md-{{col_tb}} col-lg-{{col}} mb__35">{%- render 'quote_3',block:block,rating:block.settings.rating -%}</div>{%- endfor -%}
      {%- elsif ter_des == '4' -%}
        {%- for block in section.blocks -%}<div class="quote_col col-12 col-md-{{col_tb}} col-lg-{{col}}">{%- render 'quote_4',block:block,rating:block.settings.rating -%}</div>{%- endfor -%}
      {%- else -%}
        {%- for block in section.blocks -%}<div class="quote_col col-12 col-md-{{col_tb}} col-lg-{{col}} mb__35">{%- render 'quote',block:block,rating:block.settings.rating -%}</div>{%- endfor -%}
      {%- endif -%}
    {%- else -%}
      {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>
{%- render 'section_css' -%}
<style>
  .quotes_des_4 {
    border-color: #eee;
    border-left-style: solid;
    border-top-style: solid;
    border-width: 1px;
}
.quotes_des_4 .quote_col {
    border-color: #eee;
    padding: 41px 20px 49px;
    border-right-style: solid;
    border-bottom-style: solid;
    border-width: 1px;
}
.ovic-person.style-05 .inner {
    padding-left: 20px;
    padding-right: 20px;
}
.quotes_des_4 .quote_texts p {
    margin-bottom: 30px;
}
.quotes_des_4 .quote_author {
    font-size: 13px;
    line-height: 20px;
    letter-spacing: .17em;
    margin-bottom: 0;
    font-weight: 500;
}
.quotes_des_4 .quote_position {
    font-size: 13px;
    line-height: 20px;
    margin-bottom: 0;
}
.quotes_des_4 .quote_avatar {
    width: 80px;
    height: 80px;
}
</style>
