{%- liquid
  assign sid = section.id
  assign col = section.settings.col_pr
  assign col_tb = section.settings.col_pr_tb
  assign source = section.settings.source
  assign icon_des = section.settings.icon_des
  assign icon_size = section.settings.icon_size
  assign icon_align = section.settings.icon_align
  assign col_mb = section.settings.col_mb
  if col_mb == 'fl_wrap'
     assign cl_mb = 'col-12'
  else 
    assign cl_mb = 'col-9'
  endif
  if icon_des == 'circle'
    if icon_size == 'small'
      assign img_size = '120x'
    elsif icon_size == 'medium'
      assign img_size = '160x'
    else 
      assign img_size = '240x'
    endif
  else
    if icon_size == 'small'
      assign img_size = '80x'
    elsif icon_size == 'medium'
      assign img_size = '100x'
    else 
      assign img_size = '120x'
    endif
  endif -%}

<div class="nt_se_{{sid}} {{section.settings.layout}}">
  <div class="row {{col_mb}} fl_wrap_md oah use_border_{{section.settings.border}}">
    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}{%- assign image = block.settings.image -%}
        <div class="{{cl_mb}} col-md-{{col_tb}} col-lg-{{col}} mb__25 bl_{{block.id}}">
          <div class="nt_shipping nt_icon_{{icon_des}} {{icon_align}} row no-gutters al_center_">
            {%- if image != blank -%}
              <div class="col-auto icon {{icon_size}} ship_img lazyload nt_bg_lz" data-bg="{{image| img_url:img_size}}"></div>
            {%- elsif source == 'pegk' -%}
              <div class="col-auto icon {{icon_size}} csi"><i class="{{source}} {{block.settings.icon}}"></i></div>
            {%- else -%}
              {%- assign icon = block.settings.icon -%}
                {%- if icon != blank -%}
                  {%- assign arr_icon = icon | split:',' -%}
                  {%- assign icon_class1 = arr_icon[1] | default:'las' -%}
                {%- endif  -%}
              <div class="col-auto icon {{icon_size}} csi"><i class="{{arr_icon[1] | default:'las'}} la-{{arr_icon[0]}}"></i></div>
            {%- endif -%}
            <div class="col content">
              <h3 class="title cd fs__14 mg__0 mb__5">{{block.settings.title}}</h3>
              <p class="mg__0">{{block.settings.text}}</p>
            </div>
          </div>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</div>

{%- render 'section_css' -%}
{%- style -%}
.nt_se_{{sid}} .use_border_true .nt_shipping:after {border-color:{{section.settings.cl_bd}} }
.nt_se_{{sid}} .icon {color:{{section.settings.cl_ic}} }.nt_se_{{sid}} .content {color:{{section.settings.cl_cot}} }.nt_se_{{sid}} .content h3 {color:{{section.settings.cl_hd}} }
{%- endstyle -%}

